<div class="row">
    <div class="col-12">
        <form class="border border-dark p-3">
            <div class="form-group">
                <label>Username</label>
                <input type="text" class="form-control" id="signup-username" placeholder="Enter username">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" id="signup-password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary" id="signup">Sign up</button>
            <div class="col-12 p-0">
                <a class="nav-item nav-link" href="/login">Sign in instead</a>
            </div>
        </form>
    </div>
</div>

<script src="./js/signUp.js"></script>
